{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es7", "dom"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,

    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
